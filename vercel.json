{
  "version": 2,
  "builds": [
    {
      "src": "server/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server/$1"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1",
      "use": "@vercel/static"
    },
    {
      "src": "/uploads/(.*)",
      "headers": { "Cache-Control": "public, max-age=31536000, immutable" },
      "dest": "/uploads/$1"
    }
  ]
}
